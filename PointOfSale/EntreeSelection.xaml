<Page x:Class="PointOfSale.ComboSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ComboSelection">

    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="MinWidth" Value="160"/>
                <Setter Property="MinHeight" Value="160"/>
            </Style>
        </WrapPanel.Resources>

        <Button>
            <StackPanel>
                <Image Height="100" Width="100" Source="dino-diner-images/DinoDiner-01.png" />
                <TextBlock>Brontowurst</TextBlock>
            </StackPanel>
        </Button>
        <Button Content="Dino-Nuggets"/>
        <Button Content="Prehistoric PB&amp;J"/>
        <Button Content="Pterodactyl Wings"/>
        <Button Content="Steakosaurus"/>
        <Button Content="T-Rex King Burger"/>
        <Button Content="Veloci-Wrap"/>
    </WrapPanel>
</Page>
